{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@": ["./src/lib"],
      "@/*": ["./src/lib/*"],
      "@/modules": ["./src/modules"],
      "@/modules/*": ["./src/modules/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}