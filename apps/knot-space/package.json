{
  "name": "knot-space",
  "version": "0.1.0",
  "description": "Knot Space - Online Package Repository Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "tsc",
    "build:tsc": "tsc",
    "start": "bun src/index.ts",
    "start:prod": "bun dist/index.js",
    "db:generate": "bun prisma generate",
    "db:push": "bun prisma db push",
    "db:migrate": "bun prisma migrate dev",
    "db:seed": "bun prisma/seed.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "bun --no-install tsc --noEmit",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@hono/swagger-ui": "^0.4.0",
    "@hono/zod-openapi": "^0.16.0",
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.19.1",
    "better-auth": "^1.0.5",
    "hono": "^4.6.2",
    "zod": "^3.23.8",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "prisma": "^5.19.1",
    "eslint": "^9.9.1",
    "@typescript-eslint/parser": "^8.4.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "package-manager",
    "typescript",
    "repository",
    "hono",
    "prisma",
    "better-auth"
  ],
  "author": "Knot Team",
  "license": "MIT"
}